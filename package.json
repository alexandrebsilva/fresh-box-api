{
  "name": "fresh-box-api",
  "version": "1.0.0",
  "description": "The fresh box company api",
  "main": "src/index.ts",
  "repository": "git@github.com:alexandrebsilva/fresh-box-api.git",
  "author": "Alexandre Borges <alexandre.bsilva55@gmail.com>",
  "license": "MIT",
  "private": true,
  "dependencies": {
    "axios": "^0.24.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "jsonwebtoken": "^8.5.1",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "routing-controllers": "^0.9.0",
    "typeorm": "^0.2.37"
  },
  "scripts": {
    "build": "tsc",
    "start": "node build/index",
    "start:dev": "JWT_PRIVATE_KEY=secret NODE_ENV=local ts-node-dev src/index.ts",
    "docker:run": "docker run -d --rm -p 5432:5432 -e POSTGRES_USER=postgres -e POSTGRES_PASSWORD=postgres -e POSTGRES_DB=fresh-box --name fresh-box postgres",
    "docker:stop": "docker stop fresh-box",
    "docker:restart": "yarn docker:stop ;yarn docker:run",
    "test": "jest --passWithNoTests",
    "migration:create": "ts-node-dev ./node_modules/typeorm/cli.js migration:create",
    "migration:run": "ts-node-dev ./node_modules/typeorm/cli.js migration:run",
    "migration:revert": "ts-node-dev ./node_modules/typeorm/cli.js migration:revert",
    "postinstall": "husky install"
  },
  "devDependencies": {
    "@types/jest": "^27.0.1",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/node": "^16.10.2",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.2",
    "jest": "^27.2.0",
    "pinst": "^2.1.6",
    "prettier": "^2.4.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.3"
  }
}
